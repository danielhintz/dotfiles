#!/bin/sh

mic_id=$(pulsemixer --list-sources | grep Default | awk '{print $3}' | sed 's/,//g')
headphone_id=$(pulsemixer --list-sinks | grep Default | awk '{print $3}' | sed 's/,//g')

HEADPHONE_VOL=$(pulsemixer --id $headphone_id --get-volume | awk '{print $1}')
MIC_VOL=$(pulsemixer --id $mic_id --get-volume)

mic_icon="ðŸŽ™"
head_icon="ðŸŽ§"
muted_mic=$(pulsemixer --id $mic_id --get-mute)
[ $muted_mic = "1" ] && mic_icon="ðŸ”‡"
muted_head=$(pulsemixer --id $headphone_id --get-mute)
[ $muted_head = "1" ] && head_icon="ðŸ”‡"


echo $head_icon$HEADPHONE_VOL $mic_mute $mic_icon
